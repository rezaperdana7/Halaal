<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berapakah rata-rata kisaran harga yang anda harapkan?" />

        <Spinner
            android:id="@+id/spinnerharga"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:entries="@array/arr_harga" >

            <requestFocus />
        </Spinner>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinnerharga"
            android:layout_below="@+id/spinnerharga"
            android:layout_marginTop="28dp"
            android:text="Berapakah lama penyajian yang anda tolerir?" />

        <Spinner
            android:id="@+id/spinnerlama"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:entries="@array/arr_lama" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinnerlama"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/spinnerlama"
            android:layout_marginTop="28dp"
            android:text="Berapa ragam kuliner yang anda harap tersedia?" />

        <Spinner
            android:id="@+id/spinnermenu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:ems="10"
            android:entries="@array/arr_menu" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/spinnermenu"
            android:layout_below="@+id/spinnermenu"
            android:layout_marginTop="25dp"
            android:text="Apakah anda menginginkan tempat yang punya nilai sejarah?" />

        <Spinner
            android:id="@+id/spinnersejarah"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView4"
            android:ems="10"
            android:entries="@array/arr_sejarah" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinnersejarah"
            android:layout_below="@+id/spinnersejarah"
            android:layout_marginTop="26dp"
            android:text="Berapa lama jam buka (operasional) Rumah Makan yang anda harapkan?" />

        <Spinner
            android:id="@+id/spinnerbuka"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:ems="10"
            android:entries="@array/arr_buka" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinnerbuka"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/spinnerbuka"
            android:layout_marginTop="28dp"
            android:text="Ingin Citarasa?" />

        <Spinner
            android:id="@+id/spinnercitarasa"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_below="@+id/textView6"
            android:entries="@array/arr_citarasa" />
        
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinnerbuka"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/spinnercitarasa"
            android:layout_marginTop="28dp"
            android:text="Ingin Khas?" />

        <Spinner
            android:id="@+id/spinnerkhas"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_below="@+id/textView7"
            android:entries="@array/arr_khas" />
        <Button
            android:id="@+id/button1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/spinnerkhas"
            android:text="Mulai Rekomendasi" />

    </RelativeLayout>

</ScrollView>